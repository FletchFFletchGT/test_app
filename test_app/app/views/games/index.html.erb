<h1>Listing games</h1>

<table>
  <tr>
    <th>Gametime</th>
    <th>List1</th>
    <th>List2</th>
    <th>Pending</th>
    <th>Cancelled</th>
    <th>Forfeited</th>
    <th>Winner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.gametime %></td>
    <td><%= game.list1_id %></td>
    <td><%= game.list2_id %></td>
    <td><%= game.pending %></td>
    <td><%= game.cancelled %></td>
    <td><%= game.forfeited %></td>
    <td><%= game.winner_id %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

